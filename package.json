{
  "dependencies": {
    "jest": "^23.5.0",
    "typescript": "^3.0.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "ts-jest": "^23.1.4"
  },
  "scripts": {
    "test": "jest --watch"
  },
  
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
